loop do
#These are the variables
tabs = 5
taxreturns = tabs * 2
optionstb = ["balances", "does not balance", "somewhat balances"]
number = rand(3)
trialbalance = optionstb[number]
received = "Received a trial balance that #{trialbalance}."
outcome = ["#{received} Use #{tabs} tabs in an Excel File to prepare #{taxreturns} tax returns.", "#{received} Request new trial balance from client.", "#{received} Work on the Trial Balance using #{tabs} tabs in an Excel File and send back to client."] 
#This is the function
def Excel(optionstb, tabs, taxreturns, trialbalance, received, outcome)
  if trialbalance == optionstb[2]
   puts outcome[2]
  elsif trialbalance == optionstb[1]
   puts outcome[1]
  elsif trialbalance == optionstb[0]
   puts outcome[0]
  end
end
#This runs the function
Excel(optionstb, tabs, taxreturns, trialbalance, received, outcome)
#This tells the loop to stop once the client provides a trial balance that balances.
if number == 0
break
end
end
